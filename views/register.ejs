<%- include("partials/header", { title: "Register", page: "/register" }) %>

<main class="container" style="max-width: 500px; margin: auto; padding-top: 50px;">
  <h1 class="text-2xl font-bold mb-2 text-center">Register</h1>
  <p class="text-gray-600 text-center mb-6">Join our mission! Create your account to contribute to a greener future ðŸŒ±</p>

  <% if (successMessage) { %>
    <div class="alert alert-success mb-4 text-center">
      <span><%= successMessage %></span>
    </div>
    <div class="text-center">
      <a href="/login" class="btn btn-success">Proceed to Log in</a>
    </div>
  <% } else { %>
    <% if (errorMessage) { %>
      <div class="alert alert-error mb-4">
        <span><%= errorMessage %></span>
      </div>
    <% } %>

    <form method="POST" action="/register" class="form-control space-y-4">
      <input type="text" name="userName" placeholder="User Name" class="input input-bordered w-full" required value="<%= userName %>">
      <input type="password" name="password" placeholder="Password" class="input input-bordered w-full" required>
      <input type="password" name="password2" placeholder="Confirm Password" class="input input-bordered w-full" required>
      <input type="email" name="email" placeholder="Email Address" class="input input-bordered w-full" required>
      <button type="submit" class="btn btn-primary w-full">Register</button>
    </form>
  <% } %>
</main>

<%- include("partials/footer") %>
