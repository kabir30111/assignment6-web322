<%- include("partials/header", { title: "Login", page: "/login" }) %>

<main class="container" style="max-width: 500px; margin: auto; padding-top: 50px;">
  <h1 class="text-2xl font-bold mb-2 text-center">Login</h1>
  <p class="text-gray-600 text-center mb-6">Welcome back! Log in to explore the latest climate solutions.</p>

  <% if (errorMessage) { %>
    <div class="alert alert-error mb-4">
      <span><%= errorMessage %></span>
    </div>
  <% } %>

  <form method="POST" action="/login" class="form-control space-y-4">
    <input type="text" name="userName" placeholder="User Name" class="input input-bordered w-full" required value="<%= userName %>">
    <input type="password" name="password" placeholder="Password" class="input input-bordered w-full" required>
    <button type="submit" class="btn btn-primary w-full">Login</button>
  </form>
</main>

<%- include("partials/footer") %>
